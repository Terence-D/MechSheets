<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mech_list_fragment">

    <fragment
        android:id="@+id/mech_list_fragment"
        android:name="ca.coffeeshopstudio.meksheets.MechListFragment"
        android:label="MechListFragment">
        <action
            android:id="@+id/show_mech_detail"
            app:destination="@id/mech_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/mech_detail_fragment"
        android:name="ca.coffeeshopstudio.meksheets.MechDetailFragment"
        android:label="mech_detail"
        tools:layout="@layout/fragment_mech_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>